{
    "extends": ["standard-with-typescript", "plugin:prettier/recommended"],
    "plugins": ["prettier"],
    "env": {
        "browser": true,
        "es2021": true
    },
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "semi": "off",
        "no-extra-semi": "error",
        "@typescript-eslint/semi": "off"
    }
}
